<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow HTTPS traffic to ngrok domain -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">2f6cc4eb85c0.ngrok-free.app</domain>
    </domain-config>

    <!-- Allow HTTP traffic to your local backend IP for development -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">192.168.1.39</domain>
    </domain-config>

    <!-- Allow localhost for development -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
</network-security-config>
